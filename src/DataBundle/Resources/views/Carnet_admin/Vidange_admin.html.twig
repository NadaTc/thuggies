{% block metier %}
    <div class="form-panel">




        <table class="table table-striped table-advance table-hover">

            <thead>
            <tr>
                <th><i class="fa fa-bullhorn"></i> reference</th>
                <th class="hidden-phone"><i class="fa fa-question-circle"></i> Kilometrage</th>
                <th><i class="fa fa-bookmark"></i> lieu</th>
                <th><i class="fa fa-bookmark"></i>date de vidange</th>
                <th><i class="fa fa-bookmark"></i> liee ala voiture</th>
                <th><i class=" fa fa-edit"></i> Modifier </th>
                <th></th>
            </tr>
            </thead>
            <tbody>


            {% for voiture in voitures %}

                <tr>

                    <td> {{ voiture.idVidange }} </td>
                    <td> {{ voiture.kilometrage }} </td>
                    <td> {{ voiture.lieu }} </td>
                    <td> {{ voiture.dateVidange |date("m/d/Y")  }} </td>
                    <td> {{ voiture.idVoiture.immatricule }} </td>

                    <td>

                        <a href="{{  path('Admin_Update_vidange', {'id':voiture.idVidange})}}">

                            <input type="button" name="Assurance"value="Modifier"
                                   class="btn btn-warning btn-sm" onclick="alert('Modifier ce vidange ! ')"/>
                        </a>
                    </td>



                    <td>
                        <a href="{{  path('Admin_delete_vidange', {'id':voiture.idVidange})}}">
                            <input type="button" name="Assurance"value="Supprimer"
                                   class="btn btn-danger btn-sm" onclick="alert('Supprimer ce vidange ! ')"/>
                        </a>
                    </td>
                </tr>

            {% endfor %}
            </tbody>
        </table>
