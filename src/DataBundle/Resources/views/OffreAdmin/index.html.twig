                               class="btn btn-primary btn-lg btn-block" onclick="alert('Veuillez ajouter une offre')"/>



                    </a>
                </li>
            </ul>

        <thead>
        <th>Reference</th>
        <th >titre</th>
        <th >image</th>
        <th>Marque</th>
        <th>modele</th>
        <th>prix</th>
        <th>date</th>
        <th>description </th>
        <th>localisation</th>
        <th>num tel</th>

        <thead/>


        {% for offre in offres %}


            <tr>
                <td><a href="{{ path('Admin_consulte_offre', { 'idOffre': offre.idOffre }) }}">{{ offre.idOffre }}</a></td>




                <td>{{ offre.titre }}</td>
                <td><img height="120" class="thumbnail inline no-margin-bottom" alt="Domain Owner's Avatar" src="{{ 'http://localhost/Image/' ~ offre.imageName}}"></td>
                <td>{{ offre.marque }}</td>
                <td>{{ offre.modele }}</td>
                <td>{{ offre.prix }}</td>
                <td>{% if offre.dateOffre %}{{ offre.dateOffre|date('Y-m-d') }}{% endif %}</td>
                <td>{{ offre.descriptif }}</td>
                <td>{{ offre.location }}</td>
                <td>{{ offre.numeroDeTel }}</td>


                <td>
                    <ul>
                        <li>
                            <a href="{{ path('Admin_consulte_offre', { 'idOffre': offre.idOffre }) }}">
                                <input
                                        type="button" name="Assurance"value="Consulter"
                                        class="btn btn-theme  " onclick="alert('Veulliez consulter cette annonce')" />


                            </a>
                        </li>
                        <li>
                            <a href="{{ path('Admin_edite_offre', { 'idOffre': offre.idOffre }) }}">
                                <input type="button" name="Assurance"value=" Modifier "
                                       class="btn btn-theme02 " onclick="alert('Veulliez modifier cette annonce')"/>

                            </a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}

