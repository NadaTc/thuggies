{% extends "@NadaAutoEcole/BackLayout.html.twig" %}
{% block metier %}
<div class="content-panel">


    <table class="table table-striped table-advance table-hover">



        <thead>
        <tr>
            <th><i class="fa fa-bullhorn"></i> Titre</th>
            <th class="hidden-phone"><i class="fa fa-question-circle"></i> Contenu</th>

            <th> <i class="fa fa-image"></i>  Image</th>
            <th style="align-content: center"><a href="{{ path('nada_auto_ecole_LessonAdd') }}"> <button class="btn btn-success btn-xs"><i class="fa fa-plus" > </i> Ajout</button></a></th>
            <th></th>
        </tr>
        </thead>
        <tbody>
        {% for l in lesson %}
            <tr>
                <td> {{ l.name  }} </td>
                <td class="hidden-phone" >  {{l.text|length > 100 ? (l.text[:100] ~ '... Lire la suite') : l.text }}</td>

                <td> <img src=" {{ asset(vich_uploader_asset(l, 'imageFile')) }}" style="width: 200px" /></td>

                <td>

                    <a href="{{ path('nada_auto_ecole_LessonEdit', {'id':l.idLesson} ) }}">
                        <button class="btn btn-primary btn-xs" id="mc" >
                            <i class="fa fa-pencil" ></i>
                        </button></a>

                    <a href=" {{ path('nada_auto_ecole_LessonSupp', {'id':l.idLesson} ) }}"> <button class="btn btn-danger btn-xs"  >
                            <i class="fa fa-trash-o " > </i> </button> </a>
                </td>
            </tr>
        {% endfor %}




        </tbody>
    </table>
    <div class="navigation text-center">
        {{ knp_pagination_render(lesson) }}
    </div>



</div>
{% endblock %}


{% block titre %}
Liste des lessons
{% endblock %}

{% block nonaction %}
