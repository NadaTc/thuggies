{% endblock sidemenu %}
{% block espace %} cargo espace expert auto {% endblock %}

{% block titre %} Espace Actualités {% endblock titre %}
{% block nonaction %} Liste des actualités {% endblock %}

{%  block metier %}
    <thead>
    <tr>
        <th><i class="fa fa-bullhorn"></i> Titre</th>
        <th class="hidden-phone"><i class="fa fa-question-circle"></i> Contenu</th>

        <th> <i class="fa fa-image"></i>  Image</th>
        <th style="align-content: center"><a href="{{ path('yacine_news_actualite') }}">
                <button class="btn btn-success btn-xs"><i class="fa fa-plus" > </i> Ajout</button></a></th>
        <th></th>
    </tr>
    </thead>
    <tbody>
    {% for c in actualite %}
        <tr>
            <td> {{ c.titreActualite }} </td>
            <td  >  {{c.contenuActualite|length > 100 ? (c.contenuActualite[:50] ~ '... Lire la suite') : c.contenuActualite }}</td>

            <td style="font-size: large"> <img src=" {{ asset(vich_uploader_asset(c, 'imageFile')) }}" style="width: 200px" /></td>

            <td>


                <a href="{{ path('yacine_news_modifier', {'id':c.idActualite} ) }}">
                    <button class="btn btn-primary btn-xs" id="mc" >
                        <i class="fa fa-pencil" ></i>
                    </button></a>

                <a href="{{ path('yacine_news_supp' , {'id':c.idActualite} ) }}"> <button class="btn btn-danger btn-xs"  >
                        <i class="fa fa-trash-o " > </i> </button> </a>


            </td>
        </tr>
    {% endfor %}


    </tbody>
{% endblock metier %}

{% block pagination %}

    <div class="navigation text-center">
        {{ knp_pagination_render(actualite) }}
    </div>
{% endblock %}
